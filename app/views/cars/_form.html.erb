<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :brand %><br />
    <%= select_tag("car[brand_id]", options_from_collection_for_select(@brands, "id", "name", @car.brand_id),  :prompt => "-- Select a Brand --") %>
    <div id="brand_models_div" class="field">
     <%= render :partial => 'brand_models', :locals => { :object => @brand_models } %>
    </div>
  </div>

  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :release_date %><br />
    <%= f.text_field :release_date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
